<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>朋辈网后台管理系统</title>
<link rel="stylesheet" href="css/admin/reset.css" type="text/css" media="screen" />
<link rel="stylesheet" href="css/admin/style.css" type="text/css" media="screen" />
<link rel="stylesheet" href="css/admin/invalid.css" type="text/css" media="screen" />	
<script type="text/javascript" src="scripts/admin/jquery-1.3.2.min.js"></script>
<script type="text/javascript" src="scripts/admin/simpla.jquery.configuration.js"></script>
</head>
  
	<body id="login">
		
		<div id="login-wrapper" class="png_bg">
			<div id="login-top">
			
				<h1>朋辈网后台管理系统</h1>
				<!-- Logo (221px width) -->
				<img id="logo" src="../../images/admin/logo.png" alt="朋辈网后台管理系统" />
			</div> <!-- End #logn-top -->
			
			<div id="login-content">
				
				<form action="/login/login" method="post">
				
					<div class="notification information png_bg">
						<div>
							请登录进行管理。
						</div>
					</div>
					
					<p>
						<label>用户名</label>
						<input class="text-input" type="text" name="username" />
					</p>
					<div class="clear"></div>
					<p>
						<label>密　码</label>
						<input class="text-input" type="password" name="password" />
					</p>
					<div class="clear"></div>
					<p id="remember-password">
						<label style="font-size: 13px;"><input type="checkbox" name="remember" />记住我</label>
					</p>
					<div class="clear"></div>
					<p>
						<input class="button" type="submit" value="登陆" />
					</p>
					
				</form>
			</div> <!-- End #login-content -->
			
		</div> <!-- End #login-wrapper -->
  </body>
</html>
